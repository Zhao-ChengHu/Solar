<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <include
        android:id="@+id/line1"
        layout="@layout/common_toolbar"/>

    <ImageView
        android:id="@+id/line2"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_logo"
        android:layout_below="@id/line1"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/line3"
        android:layout_below="@id/line2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primary_text_black"
        android:textSize="@dimen/ts_lel_two"/>

    <TextView
        android:id="@+id/tv_version"
        android:layout_below="@id/line3"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        tools:text="V1.1.0"/>

    <TextView
        android:layout_below="@id/tv_version"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ts_lel_three"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/app_introduce"/>

    <LinearLayout
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京双杰电气集团"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/primary_text_black"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="400-679-9948"
            android:textStyle="italic"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="© 2016 北京双杰电气股份有限公司 版权所有" />
    </LinearLayout>

</RelativeLayout>