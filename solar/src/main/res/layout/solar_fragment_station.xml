<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/tv_station_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        tools:text="北京双杰电气光伏发电站"
        android:textSize="17sp"
        android:textColor="@color/white"/>
    <TextView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ts_lel_two"
        android:gravity="center"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/primary_text_black"
        tools:text="北京双杰电气光伏发电站"
        android:visibility="gone"/>
    <View
        style="@style/Horizontal_Line"/>

    <!--当前-->
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <com.sojoline.solar.widget.PowerCapacityView
            android:id="@+id/capacity_view"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:circleColor="@color/soft_blue"
            app:arcColor="@color/red"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_power"
                android:drawableLeft="@mipmap/ic_point"
                android:drawablePadding="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/primary_text_black"
                android:textSize="@dimen/ts_lel_three"
                android:text="当前功率：--"/>
            <TextView
                android:id="@+id/tv_energy"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_point"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_black"
                android:textSize="@dimen/ts_lel_three"
                android:text="当天发电量：--"/>
            <TextView
                android:id="@+id/tv_co2"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_point"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_black"
                android:textSize="@dimen/ts_lel_three"
                android:text="当天CO2减排：0.2t"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_profit"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ic_point"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_black"
                android:textSize="@dimen/ts_lel_three"
                android:text="当天收益：200￥"/>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/Horizontal_Line"/>

    <!--total-->
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_light"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计发电量(kWh)"/>
            <TextView
                android:id="@+id/tv_total_energy"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/iv_1"
                android:layout_alignBottom="@id/iv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_black"
                android:textSize="@dimen/ts_lel_two"
                android:text="@string/unknown"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_money"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计收益(￥)"/>
            <TextView
                android:id="@+id/tv_total_profit"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/iv_2"
                android:layout_alignBottom="@id/iv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_black"
                android:textSize="@dimen/ts_lel_two"
                android:text="@string/unknown"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_co2"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计减排(t)"/>
            <TextView
                android:id="@+id/tv_total_co2"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_3"
                android:layout_alignBottom="@id/iv_3"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_black"
                android:textSize="@dimen/ts_lel_two"
                android:text="@string/unknown"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_tree"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计种植(棵)"/>
            <TextView
                android:id="@+id/tv_total_tree"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_4"
                android:layout_alignBottom="@id/iv_4"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_black"
                android:textSize="@dimen/ts_lel_two"
                android:text="@string/unknown"/>
        </RelativeLayout>

    </LinearLayout>
    <View
        style="@style/Horizontal_Line"/>

    <!--chart-->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:padding="5dp"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp">

    </com.github.mikephil.charting.charts.LineChart>
</LinearLayout>