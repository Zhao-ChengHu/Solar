<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bg_filter">

        <!--all-->
        <TextView
            android:id="@+id/tv_all"
            android:text="全部"
            style="@style/Filter_TextView"/>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sc_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_all"
            android:layout_marginLeft="8dp"
            android:checked="true"
            android:minHeight="35dp"/>

        <!--ammeter-->
        <TextView
            android:id="@+id/tv_transformer"
            app:layout_constraintTop_toBottomOf="@id/tv_all"
            style="@style/Filter_TextView"
            android:text="箱变"/>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sc_transformer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_transformer"
            app:layout_constraintTop_toBottomOf="@id/sc_all"
            android:layout_marginLeft="8dp"
            android:minHeight="35dp"/>

        <!--inverter-->
        <TextView
            android:id="@+id/tv_inverter"
            app:layout_constraintTop_toBottomOf="@id/tv_transformer"
            style="@style/Filter_TextView"
            android:text="逆变器"/>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sc_inverter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_inverter"
            app:layout_constraintTop_toBottomOf="@id/sc_transformer"
            android:layout_marginLeft="8dp"
            android:minHeight="35dp"/>

        <!--combiner-->
        <TextView
            android:id="@+id/tv_combiner"
            app:layout_constraintTop_toBottomOf="@id/tv_inverter"
            style="@style/Filter_TextView"
            android:text="汇流箱"/>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sc_combiner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sc_inverter"
            app:layout_constraintLeft_toRightOf="@id/tv_all"
            android:layout_marginLeft="8dp"
            android:minHeight="35dp"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>